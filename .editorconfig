; Top-level EditorConfig for yardstick
root = true

; Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

; Go: gofmt uses tabs; editors show width 8
[*.go]
indent_style = tab
tab_width = 8

; Go module files
[go.mod]
indent_style = space
indent_size = 2

[go.sum]
indent_style = space
indent_size = 2

; YAML (CI, configs)
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

; JSON (tools, configs)
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true

; Markdown: keep intentional trailing spaces (line breaks)
[*.md]
trim_trailing_whitespace = false

; Shell scripts
[*.sh]
indent_style = space
indent_size = 2

; PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 2

; Dockerfiles
[Dockerfile]
indent_style = space
indent_size = 2

; TOML configs (future ecosystems)
[*.toml]
indent_style = space
indent_size = 2

; Makefiles require hard tabs
[Makefile]
indent_style = tab
